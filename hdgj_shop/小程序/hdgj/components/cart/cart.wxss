/* components/cart/cart.wxss */
@import '/custom-tab-bar/nav-bottom-font/iconfont.wxss';
@import 'font-icon/iconfont.wxss';
@import '/templates/input-number/input-number.wxss';

input {
  display: inline-block;
}

p{
  display: block;
}

/*模板*/
#cart{
  width: 100vw;
  padding:1rem; 
  box-sizing: border-box;
  height: 10rem;
}


#cart > p {
  display: block;
  font-weight: 500;
  font-size: 1.5rem;
  margin-bottom: 1rem;
}



/*隐藏滚动条*/
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.goods {
  display: flex;
  align-items: center;
  width: 100%;
  height: 7rem;
 /* border: 0.1px solid #F7F7F7;*/
  border-radius: 1rem;
  /*box-shadow: 0px 0px 13px 0px gray(0,0,0,0.9);*/
  border:1px solid rgb(247, 247, 247);
  box-shadow: 0 0px 5px 3px rgba(229, 229, 229,1);
  margin-bottom: 0.5rem;
}

/*图片*/
.goods image{
  width: 12rem;
  height: 12rem;
}

.goods > view:nth-child(3){
  padding: 0 1rem 0 1rem;
}

.goods view checkbox{
  display: block;
  margin: 0 0.5rem 0 0.5rem;
}

.goods view p:nth-child(1){
  color:#666;
  height: 2.6rem;
  line-height: 1.3rem;

  display: -webkit-box;
  overflow:hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
}

.goods view p:nth-child(2){
  color: #999;
  height: 1.5rem;
  line-height: 1.5rem;
}


.goods-right{
  display: flex;
  justify-content: space-between; 
}

.goods-right > view:nth-child(2){
  display: inline-block;
}

/*提交&结算*/
.submit{
  display: flex;
  align-items: center;
  position: fixed;
  bottom: 10vh;
  height: 8vh;
  width: 100%;
  justify-content: space-around;

}

.submit view{
  display: flex;
  align-items: center;
}

.submit-button{
  color: white; 
  background-color: rgb(231, 24, 102);
  height: 5vh;
  line-height: 5vh;
  align-content: center;
  padding:0 2rem 0 2rem;
  border-radius: 2rem;
}

.submit checkbox{
  margin: 0 0.5rem 0 0.5rem;
}

.submit > span:nth-child(3),.submit > span:nth-child(2){
  color: rgb(231, 24, 102);
}





/*购物车为空*/
.empty{
  background-color: rgb(235, 235, 235);
  width: 100vw;
  text-align: center;
  color: rgba(0,0,0,0.27);
  font-size: 1rem;
  height: 3rem;
  line-height: 3rem;
}

.empty > span:nth-child(1){
  font-size: 1.5rem;
  margin-right: 0.5rem;
}

.empty span:nth-child(3){
  padding: 0.2rem 0.5rem 0.2rem 0.5rem;
  margin-left: 0.5rem;
  border: 1px solid rgba(0,0,0,0.27);
  border-radius: 1rem;
}

/*猜你喜欢*/
.guess >  p {
  text-align: center;
  font-size: 1rem !important;
  height: 2rem;
  line-height: 2rem;
} 

.guess > p::after{
  display: inline-block;
  content: '';
  height: 1px;
  width: 5rem;
  position: relative;
  top: -0.35rem;
  margin: 0 1rem 0 1rem;
  background-color: #e0e0e0;
}

.guess > p::before{
  display: inline-block;
  content: '';
  height: 1px;
  width: 5rem;
  position: relative;
  top: -0.35rem;
  margin: 0 1rem 0 1rem;
  background-color: #e0e0e0;
}

.guess view{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.guess view view{
  width: 49.5%;
  margin: 0.2rem 0 0.2rem 0;
}
.guess view view image {
  width: 100%;
}

.guess view view p{
  display: block;
  padding: 0 0.5rem 0 0.5rem;
  height: 1.5rem;
  line-height: 1.5rem;
  font-size: 1rem;
}

.guess view view p:nth-child(3){
  color:#ff6700;
}

.guess view view p:nth-child(3) span{
  font-size: 0.85rem;
}