.goods_info {
  background-color: white;
  width: 95%;
  padding: 0.5rem;
  box-sizing:  border-box;
  margin-bottom: 0.5rem;
  display: flex;
  align-items: space-between;
}

.goods_info > image {
  display: block;
  width: 6rem;
  margin-right: 0.5rem;
}

.goods_info > view {
  flex: 1;
}

.goods_info_content{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods_info_content > p:nth-child(1){
  display: -webkit-box;
  overflow:hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
}

.goods_info_content > view{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods_info_content > view > p:nth-last-child(1){
  display: flex;
  justify-content: space-between;
}