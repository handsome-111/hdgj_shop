/* pages/goodsDetails/goodsDetails.wxss */
@import "/templates/alerts/goodsSpec.wxss";
#page{
  padding: 0 1rem 0 1rem;
}
.title {
  margin: 1rem 0 1rem 0;
  font-size: 1.2rem;
  font-weight: 600;
} 

.goods-price{
  font-weight: 600;
  letter-spacing:-1px;
  color: rgb(231, 24, 102);
}

.carousel {

} 
.item image{
  display: block;
  width: 80%;
  margin: 0 auto;
}

.goods-title{
  margin-top: 1rem; 
}

.goods-title view:nth-child(1){
  width: 80%;
  float: left;
  display: -webkit-box;
  overflow:hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
}

.goods-title view:nth-child(2){
  width: 20%;
  box-sizing: border-box;
  text-align: right;
  float: right;
}

.goods-option{
  border-radius: 0.5rem;
  border:1px solid rgb(247, 247, 247);
  box-shadow: 0 0 8px 3px rgba(229, 229, 229,0.5);
  margin-top: 1rem;
}

.goods-option view:nth-child(1){
  border-bottom: 1px solid rgb(247, 247, 247);
}

.goods-option view p{
  line-height: 3rem;
  height: 3rem;
  padding: 0 1rem 0 1rem;
  font-size: 0.9rem;
}

.goods-option view p:nth-child(1){
  float: left;
  
}

.goods-option view p:nth-child(2){
  float: right;
}


/**
*商品详情
*/

.goodsDetails{
  display: flex; 
  flex-direction: column;
  justify-content: center;
  text-align: center;
  align-items: center;
}

.template{
  width: 100%;
}

.template > view{
  margin-bottom: 1rem;
}

.template view p{
  text-align: left;
  margin:0 5% 0 5%;
}

.template view image{
  width: 90%;
}

/* 
*底部
*/
.bottom{
  position: fixed;
  bottom: 0px;
  height: 8vh;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around;
  background-color: white;
  box-shadow: 0 -2px 12px 3px rgba(229, 229, 229,1);
}

.bottom p:nth-child(2){
  font-size: 0.9rem;
}

.bottom p:nth-child(3){
  color: white;
  background-color: rgb(231, 24, 102);
  width: 4rem;
  height: 6vh;
  line-height: 6vh;
  text-align: center;
  padding:0 2rem 0 2rem;
  border-radius: 2rem;
}

.back-index{
  background-color: white;
  border-radius: 100%;
  border:1px solid rgb(247, 247, 247);
  box-shadow: 0 0px 12px 3px rgba(229, 229, 229,1);
  width: 3rem;
  height: 3rem;
  line-height: 3rem;
  text-align:center;
  font-size: 0.5rem;
  position: fixed;
  bottom: 10vh;
  right: 1rem;
}

