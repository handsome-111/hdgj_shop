/* pages/login/otherLogin/otherLogin.wxss */
.main{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100vh;
  justify-content: space-between;
}


.page_top{
  display: flex;
  flex-direction: column;
  /*justify-content: center;*/
  align-items: center;
  padding: 5% 10% 5% 10%;
}
.page_top image{
  border-radius: 100%;
  width: 5rem;
  height: 5rem;
  margin: 2rem 0 2rem 0;
}

.page_top view:nth-of-type(2),.page_top view:nth-of-type(1){
  border-bottom: 1px solid rgb(239, 239, 239);
  height: 1rem;
  display: flex;
  width: 100%;
  padding: 1rem 0 1rem 0;
} 

.page_top view:nth-of-type(2) input,.page_top view:nth-of-type(1) input{
  flex: 1;
}

.page_top view:nth-of-type(2) span{
  border-left: 1px solid rgb(239, 239, 239);
  line-height: 1rem;
  white-space: nowrap;
  padding: 0 1rem 0 1rem;
}

.page_top button{
  width: 100%;
  border-radius: 3rem;
  height: 3rem;
  line-height: 3rem;
  border: none;
  margin-top: 2rem;
  background-color: rgb(242, 51, 12);
  color: white;
}

/*
*短信验证码登陆和新用户注册
*/
.page_top view:nth-last-child(1){
  margin-top: 1rem;
  display: flex;
  justify-content:space-between;
  width: 100%;
  color: rgba(129, 126, 125, 0.89)
}

.page_top view:nth-last-child(1) span{
  display: inline-block;
}


/*
* 页面的底部
*/
.page_bottom{
  text-align: center;
  padding: 2rem 1rem 2rem 1rem;
  color: rgb(228,227,221);
}

.page_bottom view{
  display: flex;
}

.page_bottom view span{
  display: inline-block;
}

.title{
  vertical-align: middle;
  margin: 0 0.5rem 0 0.5rem;
}

.line{
  flex: 1;
  border-bottom: 1px solid rgb(228,227,221);
  height: 10px;
  line-height: 4px;
}

.other_login {
  margin-top: 2rem;
  display: flex;
  justify-content: space-between;
}

.other_login button{
  display: flex;
  flex-direction: column;
  text-align: center;
  align-items: center;
  background-color: white;
  font-size: 0.9rem;
  color: rgba(129, 126, 125, 0.89)
}

.other_login image{
  width: 3rem;
  height: 3rem;
  border-radius: 100%;
}



