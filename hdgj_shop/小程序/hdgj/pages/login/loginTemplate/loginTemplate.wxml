    <view>
      <span class='line'></span>
      <span class="title">其他登录方式</span>
      <span class='line'></span>
    </view>
    <view class='other_login'>
      <button>
        <image src='/images/index/2.jpg'></image>
        <span>微信登陆</span>
      </button>
      <button>
        <image src='/images/index/2.jpg'></image>
