<template name='loginTemplate'>
<view class='main'>
  <view class='page_top'>
    <image src='/images/index/2.jpg'></image>
    <view>
      <input type='text'></input>
    </view>
    <view>
      <input type='password' placeholder='请输入密码'></input>
      <span>忘记密码</span>
