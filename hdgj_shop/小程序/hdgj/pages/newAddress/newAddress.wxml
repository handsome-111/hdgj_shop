<!--pages/newAddress/newAddress.wxml-->
<form bindsubmit="formSubmit">
  <view class='main'>
      <input placeholder="姓名" name='name' value='{{address.name}}' dada></input>
      <input placeholder="手机号码" name='phone' value='{{address.phone}}'></input>
      <input placeholder="邮编" name='post' value='{{address.post}}'></input>
      <picker mode='region' bindchange='bindRegionChange'>
        <input class='picker' placeholder="省份、城市、区县" value='{{region}}' disabled="false"></input>
      </picker>
      <input placeholder="详细地址，如楼道、楼盘号等" name='street1'></input>
      <p>
        <checkbox checked="{{checked == 1 ? true :false}}" ></checkbox>设为默认地址 
      </p>
  </view>

  <view class='fotter'>
    <button formType="submit">保存</button>
    <button bindtap="deleteAddress">删除</button>
  </view>
</form>
 